<article class="blog-post">
    <a href="#" class="blog-post__image">

    </a>
    <div class="blog-post__body">
        <h2 class="blog-post__title"><a href="{{ path('blog_show', {id: post.id, slug: post.slug}) }}">{{ post.title }}</a></h2>
        <div class="blog-post__meta">
            <div>{{ post.createdAt | format_date('long') }}</div>
            <div>Auteur {{ post.author.username }}</div>
        </div>
        <p>
            {{ post.content | markdown_excerpt(250) }}
        </p>
    </div>
</article>