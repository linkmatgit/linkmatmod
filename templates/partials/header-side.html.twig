<ul class="header-side">
    <li class="header__notification">

    </li>
    <li class="header__search">

    </li>
    {% if app.user %}
        <li class="header__account">
            <a href="{{ path('app_profil_update') }}" {{ menu_active('account') }}>
              {{ icon('user') }}
                <span>{{ app.user.userIdentifier }}</span>
            </a>

        </li>
        {% if is_granted('IS_IMPERSONATOR') %}
            <li class="header__logout">
                <a href="{{ impersonation_exit_path(path('app_home')) }}">{{ icon('logout') }} <span>Se déconnecter</span></a>
            </li>
        {% else %}
            <li class="header__logout">
                <a href="{{ path('app_logout') }}" data-turbolinks="false">{{ icon('logout') }} <span>Se déconnecter</span></a>
            </li>
        {% endif %}
    {% else %}
        <li class="header-side__auth">
            <a href="{{ path('app_register') }}" {{ menu_active('register') }}>
                {{ icon('user') }}

                <span>S'inscrire</span>
            </a>
            <span class="text-muted">·</span>
            <a href="{{ path('app_login', {redirect: app.request.pathInfo}) }}" {{ menu_active('login') }}>
                <span>Se connecter</span>
            </a>
        </li>
    {% endif %}
    <li class="header__burger">
        <button id="js-burger"><span>Afficher le menu</span></button>
    </li>
</ul>