{% for tag in tags %}
    <div class="topic-tag">
        {% if tag.parent %}
            <a href="{{ path(tag.parent) }}" class="is-parent pill small pill-square pill-grey"{% if tag.parent.color != '#000000' %} style="background-color: {{ tag.parent.color }}"{% endif %}>{{ tag.parent.title }}</a>
        {% endif %}
        <a href="{{ path(tag) }}" class="pill small pill-square pill-grey"{% if tag.color != '#000000' %} style="background-color: {{ tag.color }}"{% endif %}>{{ tag.title }}</a>
    </div>
{% endfor %}